---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="A terminal themed portfolio website of Hubert Kowalski"
		/>
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, maximum-scale-1"
		/>
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ?? "Hubert Kowalski - Portfolio"}</title>
	</head>

	<body
		class="w-screen bg-gruvbox-100 text-gruvbox-900 transition-colors duration-300 motion-reduce:transition-none motion-reduce:hover:transform-none dark:bg-gruvbox-900 dark:text-gruvbox-100"
	>
		<slot />
	</body>
</html>

<style lang="scss" is:global>
	@tailwind base;
	@layer base {
		a {
			@apply underline;
		}
	}

	@tailwind components;
	@tailwind utilities;

	$font-weights: (
		"ExtraBold" 900,
		"Bold" 800,
		"SemiBold" 700,
		"Medium" 600,
		"Regular" 500,
		"Light" 400,
		"ExtraLight" 300,
		"Thin" 200
	);

	@each $weight, $value in $font-weights {
		@font-face {
			font-family: "JetBrainsMono";
			src: url("/fonts/JetBrainsMono-#{$weight}.woff2") format("woff2");
			font-weight: #{$value};
			font-style: normal;
		}
	}

	@each $weight, $value in $font-weights {
		@font-face {
			font-family: "JetBrainsMonoItalic";
			src: url("/fonts/JetBrainsMono-#{$weight}Italic.woff2") format("woff2");
			font-weight: #{$value};
			font-style: italic;
		}
	}
</style>

<script is:inline>
	const theme = (() => {
		if (typeof localStorage !== "undefined" && localStorage.getItem("theme"))
			return localStorage.getItem("theme");

		if (window.matchMedia("(prefers-color-scheme: dark)").matches)
			return "dark";

		return "light";
	})();

	if (theme === "light") document.documentElement.classList.remove("dark");
	else document.documentElement.classList.add("dark");

	window.localStorage.setItem("theme", theme);
</script>
